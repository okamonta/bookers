<!--DOCTYPE html-->
<html>
    <head>
        <link rel="stylesheet" media="all" href="/assets/application-d12397cbc3a266ce5a99f7b588223090c55ca04a439953bb5f9304395de93fc3.css" data-turbolinks-track="reload">
        <script src="/assets/application-114264dd93c8ff30e4335b71eed7949d66c4e7a8eb62e2de6284c046fe07104b.js" data-turbolinks-track="reload"></script>
        <title>WebCampBackendNew</title>
        <meta name="csrf-param" content="authenticity_token">
        <meta name="csrf-token" content="c5WSEbWyomD7tFBRoSvNH8wm01kSSsl2lZVZ47QJ4Xu2djTNARKCMH2enEAIh8EwVj9OdInBbqERE8tHxQBIWw==">
    </head>
    
    <body>
      <p id="notice">
        <%= notice %>
      </p>
      <h1>Books</h1>
      <table>
        <thead>
            <tr>
               <th>Title</th>
               <th>Body</th>
               <th colspan="3"></th>
            </tr>
        </thead>
      <!--title.body-->
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="book-title">
                <%= book.title %>
              </td>
              <td class="book-body">
                <%= book.body %>
              </td>
              <!--show.edit.destroy-->
              <td>
                <%= link_to "Show", book_path(book) %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_path(book) %>
              </td>
              <td>
                <%= link_to "Destroy", book, method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h2>New book</h2>
      <!--エラー発生時-->
      <!--%= flash[:alert] %>-->
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors occurred.
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>


      <!--form_with部分-->
      <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </body>
</html>
